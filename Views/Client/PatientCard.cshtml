@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Карточка пациента";
}
<div class="card form-group">
    <div class="card-head form-group">
        <h1 class="form-control">Данные пациента</h1>
    </div>
    <div class="card-body form-group row">
        <div class="col text-center">
            <img class="w-50 rounded" src="https://avatars.mds.yandex.net/i?id=a43db7032d3f26eb9eecbb0cbe636fd05e43fc91-10414552-images-thumbs&n=13" alt="куплинов.png" />
        </div>
        <div class="col text-center">
            <input class="form-control mt-2 w-50 m-auto" type="text" placeholder="Фамилия" />
            <input class="form-control mt-2 w-50 m-auto" type="text" placeholder="Отчество" />
            <input class="form-control mt-2 w-50 m-auto" type="text" placeholder="Имя" />
            <h6 class="mt-3">Дата рождения</h6>
            <input class="form-control mt-2 w-50 m-auto" type="date" />
            <input class="form-control mt-2 w-50 m-auto" type="text" placeholder="Пол" />
        </div>
    </div>
</div>